# ========================================================
# CONFIGURAÇÕES GERAIS DO PROJETO
# ========================================================
PROJECT_NAME=MeuProjeto
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost

# ========================================================
# CONFIGURAÇÕES DO WORDPRESS
# ========================================================
WORDPRESS_VERSION_653=6.5.3
WORDPRESS_VERSION_593=5.9.3
WORDPRESS_VERSION_498=4.9.8

WORDPRESS_DB_HOST=db
WORDPRESS_DB_USER=user
WORDPRESS_DB_PASSWORD=password

WORDPRESS_DB_NAME_653=wordpress_653
WORDPRESS_DB_NAME_593=wordpress_593
WORDPRESS_DB_NAME_498=wordpress_498

# ========================================================
# CONFIGURAÇÕES DO BANCO DE DADOS (MariaDB)
# ========================================================
MYSQL_ROOT_PASSWORD=password
MYSQL_DATABASE=wordpress_db
MYSQL_USER=user
MYSQL_PASSWORD=password

# ========================================================
# CONFIGURAÇÕES DO BANCO DE DADOS (PostgreSQL)
# ========================================================
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=wordpress_db

# ========================================================
# CONFIGURAÇÕES DO BANCO DE DADOS (Oracle)
# ========================================================
ORACLE_PASSWORD=password

# ========================================================
# CONFIGURAÇÕES DOS SERVIDORES WEB
# ========================================================
NGINX_PORT_653=8080
NGINX_PORT_593=8081
NGINX_PORT_498=8082

APACHE_PORT_653=8090
APACHE_PORT_593=8091
APACHE_PORT_498=8092

# ========================================================
# CONFIGURAÇÕES DAS FERRAMENTAS AUXILIARES
# ========================================================
PMA_HOST=db
PMA_USER=user
PMA_PASSWORD=password
PMA_PORT=8083

PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=password
PGADMIN_PORT=8084

# ========================================================
# CONFIGURAÇÕES DO BITBUCKET
# ========================================================
BITBUCKET_HOME=/var/atlassian/application-data/bitbucket
BITBUCKET_PORT_HTTP=7990
BITBUCKET_PORT_SSH=7999

# ========================================================
# CONFIGURAÇÕES DO CI/CD (GITHUB ACTIONS, DOCKER HUB)
# ========================================================
GITHUB_REPO=github.com/seu-usuario/seu-repositorio
GITHUB_BRANCH=main
DOCKERHUB_USERNAME=seu-usuario
DOCKERHUB_REPO=seu-repositorio
DOCKERHUB_TAG=latest

# ========================================================
# CONFIGURAÇÕES PARA AUTOMAÇÃO NO CI/CD
# ========================================================
DEPLOY_SERVER=seu-servidor.com
DEPLOY_USER=deploy
DEPLOY_PATH=/var/www/seu-projeto
DEPLOY_SSH_KEY=~/.ssh/id_rsa

# ========================================================
# AMAZON AWS (S3, RDS, Lambda, etc.)
# ========================================================
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket
AWS_RDS_HOST=rds-instance-endpoint
AWS_RDS_DB_NAME=wordpress_db
AWS_RDS_USERNAME=user
AWS_RDS_PASSWORD=password
AWS_LAMBDA_FUNCTION=my-lambda-function

# ========================================================
# MICROSOFT AZURE (Storage, Database, App Services)
# ========================================================
AZURE_STORAGE_ACCOUNT_NAME=your-storage-account
AZURE_STORAGE_ACCOUNT_KEY=your-storage-key
AZURE_CONTAINER_NAME=your-container
AZURE_SQL_SERVER=your-sql-server.database.windows.net
AZURE_SQL_DATABASE=wordpress_db
AZURE_SQL_USERNAME=user
AZURE_SQL_PASSWORD=password
AZURE_APP_SERVICE_NAME=my-app-service
AZURE_RESOURCE_GROUP=my-resource-group

# ========================================================
# GOOGLE CLOUD PLATFORM (GCP) (Storage, Firestore, Compute Engine)
# ========================================================
GCP_PROJECT_ID=my-gcp-project
GCP_STORAGE_BUCKET=my-storage-bucket
GCP_SQL_INSTANCE_NAME=my-sql-instance
GCP_SQL_DATABASE=wordpress_db
GCP_SQL_USERNAME=user
GCP_SQL_PASSWORD=password
GCP_COMPUTE_ENGINE_INSTANCE=my-vm-instance
GCP_SERVICE_ACCOUNT_JSON=path/to/service-account.json

